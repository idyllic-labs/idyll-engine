{
  "name": "@idyllic-labs/idyll-engine",
  "version": "2.0.0",
  "description": "Document execution engine for Idyllic language experimentation",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "cli": "bun run cli/idyll-cli.ts",
    "agent": "bun run cli/agent-cli.ts",
    "prepublishOnly": "node -e \"if (!process.env.CI) { console.error('\\n❌ Publishing is only allowed through GitHub Actions\\n\\nTo publish a new version:\\n1. Update version in package.json\\n2. Commit and push to main\\n3. GitHub Actions will automatically publish\\n'); process.exit(1); }\""
  },
  "dependencies": {
    "date-fns": "^3.0.0",
    "uuid": "^11.1.0",
    "xml-js": "^1.6.11",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@ai-sdk/azure": "^1.3.23",
    "@types/node": "^20.0.0",
    "@types/uuid": "^10.0.0",
    "chalk": "^5.4.1",
    "prettier": "^3.6.2",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "ai": "^4.3.17"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/idyllic-labs/idyll-engine.git"
  }
}